section.signup
  .container.h-100
    .signup__inner.flex.h-100
      .signup__card
        button &times; 
        h1.signup__title Ready to sign up?
        .row.signup__row 
          a(href="").signup__link.signup__link--blue.flex
            img(src="/img/facebook.svg", alt="") 
            span Facebook
          a(href="").signup__link.flex
            img(src="/img/google.svg", alt="") 
            span Google
        form(action="").signup__form.flex
          label(for="email").flex.signup__label.label
            input(type="text" name="email", id="email").label__input
            span.label__text Email address
          label(for="password").flex.signup__label.label
            input(type="password" name="password", id='password').label__input
            span.label__text Password
          label(for="username").flex.signup__label.label
            input(type="text" name="username", id="username").label__input
            span.label__text Username
          .row.signup__row--bottom 
            select(name="dateOfBirthday") 
              option date of birthday
              option date of birthday
            select(name="gender")
              option gender
              option female
              option male
          .flex.signup__text-block
            p(style="text-align: center") By clicking on "Sign up", you accept the <br/>
              span Terms and Conditions of Use.
          button(type="submit").signup__btn SIGN UP
          a(href="/login").signup__relocate Already have an account? 
            span Log in